<Window x:Class="RoejenAMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoejenAMS"
        mc:Ignorable="d"
        Title="Roejen Asset Management" Height="1080" Width="1920">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button x:Name="B1" Content="TEST" Width="150" ClickMode="Press" Click="B1_OnClick" Background="Aqua" Margin="5,5,5,5"/>
            <Button x:Name="B2" Content="Insert" Width="150" ClickMode="Press" Click="B2_OnClick" Background="Aqua" Margin="5,5,5,5" />
            <TextBox x:Name="T1" Width="150" Margin="5,5,5,5" BorderThickness="2"/>
            <TextBox x:Name="T2" Width="150" Margin="5,5,5,5" BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Window>
